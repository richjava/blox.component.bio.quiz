{%- macro default(blox, theme='light') -%}
    <div class="container">
        <div class="row py-8">
            <div class="col-sm-6 mb-7">
                <img class="rounded-circle w-100" src="{{ blox.page.path }}assets/images/graeme-bishop.jpg"
                    alt=""/>
            </div>
            <div class="col-sm-6">
                <h2 class="brand-pre-heading {% if theme === 'dark' %}text-white{% endif %} mb-5">Dr Graeme Bishop</h2>
                <p class="lead {% if theme === 'dark' %}text-white{% endif %} mb-6 mb-lg-8">{{blox.db.home.fields.bio}}</p>
                <div class="text-lg-right">
                    <a class="mr-5" href="#">
                        <img src="{{ blox.page.path }}assets/images/facebook-icon{% if theme !== 'dark' %}-dark{% endif %}.svg" alt=""/>
                    </a>
                    <a class="mr-lg-5" href="#">
                        <img src="{{ blox.page.path }}assets/images/youtube-icon{% if theme !== 'dark' %}-dark{% endif %}.svg" alt=""/>
                    </a>
                </div>
            </div>
        </div>
    </div>
{%- endmacro -%}